<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <data/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        android:layout_width="match_parent">


        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="250dp"
            android:layout_height="50dp"

            android:gravity="center"
            android:text="name"
            android:background="@drawable/border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_margin="5dp"
            android:layout_width="368dp"
            android:layout_height="244dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:scaleX="5"
            android:scaleY="5"
            android:src="@drawable/p1"
            app:layout_constraintBottom_toTopOf="@id/separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_name" />

        <TextView
            android:id="@+id/pokemon_t1"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="type1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image" />

        <ImageView
            android:id="@+id/image_type1"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/fire"
            app:layout_constraintStart_toEndOf="@+id/pokemon_t1"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image" />

        <TextView
            android:id="@+id/pokemon_t2"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="type2"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
            app:layout_constraintEnd_toStartOf="@+id/pokemon_t2"
            />

        <ImageView
            android:id="@+id/image_type2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dragon"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.919"
            app:layout_constraintStart_toEndOf="@+id/pokemon_t2"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image" />

        <TextView
            android:id="@+id/pokemo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Stats:"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/pokemon_HP"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pokemon_Attack"
            app:layout_constraintTop_toBottomOf="@+id/pokemo" />

        <TextView
            android:id="@+id/pokemon_Attack"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemo" />

        <TextView
            android:id="@+id/pokemon_Defense"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pokemon_Speed"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_HP" />

        <TextView
            android:id="@+id/pokemon_Speed"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_Attack" />

        <Button
            android:id="@+id/button_retour"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="28dp"
            android:text="retour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemo"
            app:layout_constraintVertical_bias="0.711" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
