<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <data/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        android:layout_width="match_parent">


        <ImageView
            android:id="@+id/pokemon_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/p1"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="298dp" />

        <ImageView
            android:id="@+id/image_type5"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginTop="8dp"
            android:src="@drawable/fire"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
            tools:layout_editor_absoluteX="276dp" />

        <ImageView
            android:id="@+id/image_type4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"

            android:layout_marginEnd="24dp"
            android:src="@drawable/dragon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image" />

        <ImageView
            android:id="@+id/pokemon_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/p1"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="298dp" />

        <ImageView
            android:id="@+id/image_type3"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginTop="8dp"
            android:src="@drawable/fire"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
            tools:layout_editor_absoluteX="32dp" />

        <ImageView
            android:id="@+id/image_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"

            android:layout_marginEnd="268dp"
            android:src="@drawable/dragon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image" />

        <TextView
            android:id="@+id/pokemon_name2"
            android:background="@drawable/border"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="220dp"
            android:gravity="center"
            android:text="Choose your first pokemon and try to catch them all !"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="345dp"
            android:layout_height="95dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="Hello Omar, Are you ready to begin your journey to become the best pokemon Trainer in the world."
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/p1"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="298dp" />

        <ImageView
            android:id="@+id/image_type2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"

            android:layout_marginEnd="148dp"
            android:src="@drawable/dragon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image" />

        <ImageView
            android:id="@+id/image_type1"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginTop="4dp"
            android:src="@drawable/fire"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_image"
            tools:layout_editor_absoluteX="151dp" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="210dp"
            android:layout_height="53dp"
            android:layout_margin="5dp"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>